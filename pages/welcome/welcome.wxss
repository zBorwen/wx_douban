/* pages/index/index.wxss */
page{
    background-color:#8C9FF9; 
}

.container{
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 200rpx 0;
}
.user-info{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.username{
    margin-top: 20rpx;
    font-size: 14px;
    font-family: Microsoft Yahei;
}
.avatar{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}

.title{
    width: 150px;
    line-height: 25px;
    border-radius: 10rpx;
    border:1px solid #333;
    text-align: center;
    margin-top: 200px;
}
.title text{
    font-family: Microsoft Yahei;
    font-size: 14px;
}