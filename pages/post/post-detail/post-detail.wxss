.container{
    display: flex;
    flex-direction: column;
}

.postImg{
    width: 100%;
    height: 450rpx;
}

.playing{
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    top: 185rpx;
    left: 50%;
    margin-left: -40rpx;
}

.blur{
    filter:blur(10px);
}

@keyframes auto{
    0%{
        transform: rotate(0deg) scale(.8);
    }
    50%{
        transform: rotate(180deg) scale(1.2);
    }
    100%{
        transform: rotate(360deg) scale(.8);
    }
}

.rotate{
    animation: auto 1.5s linear infinite;
}

.author-date{
    display: flex;
    flex-direction: row;
    margin-top: 10px;
    line-height: 30px;
}

.avatar{
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    vertical-align: middle;
    margin-left: 20rpx;
}

.author{
    font-size: 30rpx;
    color: #666;
    vertical-align: middle;
    margin-left: 20rpx;
}

.txt{
    font-size: 26rpx;
    color: #999;
    vertical-align: middle;
    margin-left: 20rpx;
    margin-top: 5rpx;
}

.time{
    font-size: 26rpx;
    color: #999;
    vertical-align: middle;
    margin-left: 20rpx;
    margin-top: 5rpx;
}

.title{
    font-size: 28rpx;
    color: #333;
    font-weight: 700;
    margin-top:20rpx;
    margin-left: 20rpx; 
}

.content{
    font-size: 28rpx;
    color: #666;
    letter-spacing: 2rpx;
    margin-top: 10rpx;
    padding: 20rpx;
}

.music{
    margin:20rpx 0 30rpx 20rpx;
}

.tool{
    margin-top: 70rpx;
}

.tool image{
    width: 50rpx;
    height: 50rpx;
    vertical-align: middle;
    float: right;
    margin-right: 30rpx;
}